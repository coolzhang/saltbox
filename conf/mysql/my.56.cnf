## MySQL Server 5.6 Reference Configuration Options

[client]
port                           = {{ port }}
socket                         = /data/mysql{{ port }}/mysql.sock
default-character-set          = utf8

[mysqld]

# GENERAL #
user                           = mysql
basedir                        = {{ basedir }}
datadir                        = /data/mysql{{ port }}
port                           = {{ port }}
socket                         = /data/mysql{{ port }}/mysql.sock
pid-file                       = /data/mysql{{ port }}/mysql.pid
character-set-server           = utf8
collation-server               = utf8_bin
init-connect                   = 'SET NAMES utf8'
tmpdir                         = /data/tmp

# SAFETY #
max-allowed-packet             = 1G
max-connect-errors             = 1000000
skip-name-resolve              = 1
sysdate-is-now                 = 1
innodb-strict-mode             = 1
lower_case_table_names         = 1

# CACHES AND LIMITS #
tmp-table-size                 = 512M
max-heap-table-size            = 512M
query-cache-type               = 0
query-cache-size               = 0
max-connections                = 6000
max-user-connections           = 4000
thread-cache-size              = 512
open-files-limit               = 65535
table-definition-cache         = 4096
table-open-cache               = 4096
{{ thread_handling }}
{{ thread_pool_size }}

# Logging #
log-error                      = /data/mysql{{ port }}/mysql{{ port }}.err
slow_query_log                 = 0
slow_query_log_file            = /data/mysql{{ port }}/mysql{{ port }}.slow
long_query_time                = 0.1
{{ log_timestamps }}

# BINARY LOGGING #
log-bin                        = mysql-bin
binlog_format                  = ROW
expire-logs-days               = 7
sync-binlog                    = 1
relay_log                      = relay-bin
relay_log_index                = relay-bin.index
relay-log-recovery             = 1
master-info-repository         = TABLE
relay-log-info-repository      = TABLE
binlog_rows_query_log_events   = 1

# MyISAM #
key-buffer-size                = 32M
#myisam-recover                 = FORCE,BACKUP

# INNODB #
innodb_buffer_pool_size        = {{ innodb_buffer_pool_size }}
innodb_data_home_dir           = /data/mysql{{ port }}
innodb_log_group_home_dir      = /data/mysql{{ port }}
innodb_data_file_path          = ibdata1:200M:autoextend
#innodb-flush-method            = O_DIRECT
innodb-log-files-in-group      = 2
innodb-log-file-size           = 3G
innodb-file-per-table          = 1
innodb_flush_log_at_trx_commit = 1
innodb_thread_concurrency      = 16
innodb_io_capacity             = 6000
innodb_io_capacity_max         = 8000
innodb_sort_buffer_size        = 64M
innodb_file_format             = Barracuda
innodb_file_format_max         = Barracuda
innodb_log_buffer_size         = 16M
innodb_page_size               = 8K
innodb_undo_logs               = 128
innodb_undo_tablespaces        = 8
innodb_undo_directory          = /data/mysql{{ port }}
innodb_numa_interleave         = 1

# difference btw master and slave
server-id                      = {{ server_id }}
read_only                      = {{ read_only }}
log-slave-updates              = {{ log_slave_updates }}

# for mysql-utilities
report-host                    = {{ report_host }}
report-port                    = {{ report_port }}

[mysqld_safe]
user                           = mysql
socket                         = /data/mysql{{ port }}/mysql.sock
open_files_limit               = 65535

[mysqldump]
quick
max_allowed_packet             = 1G

[mysql]
no-auto-rehash
prompt                         = '\u@\h(\d) \R:\m> '
